@startuml
start
:Message utilisateur;
:Analyse NLP (spaCy);

if (Intention détectée ?) then (Oui)
  :Vérifier les cours obligatoires non suivis;
  :Génération des combinaisons personnalisées;
  :Afficher recommandations (Combo 1, 2, 3...);
  :Souhaitez-vous ajouter au calendrier?;

  if (Ajout au calendrier ?) then (Oui)
    :Ajouter dans le calendrier;
  else (Non)
    :Proposer nouvelle combinaison;
    back to "Afficher recommandations (Combo 1, 2, 3...)"
  endif

else (Non)
  repeat
    :Chatbot pose une question de clarification;
    :Nouvelle réponse utilisateur;
    :Analyse NLP;
  repeat while (Intention toujours floue ?)
  --> [Retour à l’analyse initiale]
endif

stop
@enduml
